<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DayOnes.Views.Components.LikeLabel">
    
    <Grid VerticalOptions="Center" HorizontalOptions="Center" Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <!--Column 1-->
        <Image
            Grid.Column="0"
            Source="vectorheart.png"
            WidthRequest="18"
            HorizontalOptions="End"
            
            VerticalOptions="Center"
            
            />
        
        <!--Column 2-->
        <Label
            Grid.Column="1"
            x:Name="lblCount"
            FontFamily="SFProText"
        TextColor="{StaticResource DefaultDarkGrey}"
            HorizontalOptions="Start"
            VerticalOptions="Center"
            Margin="4"
            />
    </Grid>
</ContentView>
