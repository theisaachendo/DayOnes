<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DayOnes.Views.Components.ChatMessageContainer">
    
    <!-- Message Bubble Frame -->
    <Frame 
        x:Name="frmMain" 
        BorderColor="{StaticResource DefaultPink}" 
        CornerRadius="24" 
        Padding="10" 
        HasShadow="False"
        >
        <StackLayout>

            <!-- Message Text -->
            <Label x:Name="lblMessage" FontFamily="SFProText" FontSize="17" TextColor="{StaticResource DefaultBlack}" />

            <!-- Message Time -->
            <Label x:Name="lblSentAt"  FontFamily="SFProText" FontSize="12" TextColor="{StaticResource DefaultBlack}" HorizontalOptions="End" />

        </StackLayout>
    </Frame>
</ContentView>
